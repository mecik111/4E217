
<%- include('../partials/header') %>
<main>
    <hr>
    <h2>Edytuj artykuł</h2>
    <% if (typeof error !== 'undefined' && error) { %>
        <div style="color:red"><%= error %></div>
    <% } %>
    <form id="editForm" action="/edit/<%= post._id %>" method="POST">
        <label>Tytuł:</label><br>
        <input type="text" name="title" value="<%= post.title %>" required><br>
        <label>Opis:</label><br>
        <textarea name="description" required><%= post.description %></textarea><br>
        <label>Typ posta:</label><br>
        <select name="postType" required>
            <option value="artykul" <%= post.postType === 'artykul' ? 'selected' : '' %>>Artykuł</option>
            <option value="poradnik" <%= post.postType === 'poradnik' ? 'selected' : '' %>>Poradnik</option>
            <option value="news" <%= post.postType === 'news' ? 'selected' : '' %>>News</option>
            <option value="recenzja" <%= post.postType === 'recenzja' ? 'selected' : '' %>>Recenzja</option>
        </select><br>
       
        <label>Hasło do edycji:</label><br>
        <input type="password" name="password" required><br>
        <button type="submit">Zapisz zmiany</button>
    </form>
  
</main>
<%- include('../partials/footer') %>